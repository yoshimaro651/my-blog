---
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="IT活用のススメ - 思考と仕事をITで時短していく"
  description="最新のIT技術、IT時事問題、ITの活用方法を紹介"
>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI',
      'Noto Sans JP', 'Hiragino Kaku Gothic ProN', Meiryo, sans-serif;
    line-height: 1.7;
    color: #1a1a1a;
    background: #fafafa;
  }

  header {
    background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
    color: white;
    padding: 4rem 2rem;
    text-align: center;
  }

  .site-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .site-description {
    font-size: 1.25rem;
    opacity: 0.95;
  }

  nav {
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-content {
    display: flex;
    justify-content: center;
    gap: 20px;
    max-width: 960px;
    margin: 0 auto;
    padding: 1rem;
  }

  .nav-link {
    color: #1a1a1a;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 6px;
  }

  .nav-link:hover {
    background: #f3f4f6;
    color: #3b82f6;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
  }

  .section-subtitle {
    color: #6b7280;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
    list-style: none;
  }

  .post-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid #f3f4f6;
    transition: all 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  .post-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-content {
    padding: 2rem;
  }

  .post-category {
    display: inline-block;
    background: #eff6ff;
    color: #1e40af;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .post-date {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
  }

  .post-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .post-description {
    color: #4b5563;
    font-size: 0.95rem;
    line-height: 1.7;
  }

  .read-more {
    display: inline-block;
    margin-top: 1rem;
    font-weight: 600;
    color: #3b82f6;
  }
</style>

<header>
  <h1 class="site-title">IT活用のススメ</h1>
  <p class="site-description">思考と仕事をITで時短していく</p>
</header>

<nav>
  <div class="nav-content">
    <a href="/" class="nav-link">ホーム</a>
    <a href="/about/" class="nav-link">運営者情報</a>
  </div>
</nav>

<main>
  <div class="section-header">
    <h2 class="section-title">最新記事</h2>
    <p class="section-subtitle">
      テクノロジーと時事問題を初心者向けに解説
    </p>
  </div>

  <ul class="posts-grid">
    {posts.map((post) => (
      <li class="post-card">
        <a href={`/blog/${post.id.replace('.md', '')}/`}>
          <div class="post-content">
            <span class="post-category">{post.data.category}</span>
            <div class="post-date">
              <FormattedDate date={post.data.pubDate} />
            </div>
            <h2>{post.data.title}</h2>
            <p class="post-description">{post.data.description}</p>
            <span class="read-more">続きを読む →</span>
          </div>
        </a>
      </li>
    ))}
  </ul>
</main>

</BaseLayout>